{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.timeax.dev/fortiplugin/dev.host.json",
  "title": "Dev Host Settings",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "enum": [
          "string",
          "number",
          "boolean",
          "json",
          "file",
          "blob"
        ]
      },
      "value": {},
      "description": {
        "type": "string"
      }
    },
    "required": [
      "type",
      "value"
    ],
    "additionalProperties": false,
    "allOf": [
      {
        "if": {
          "properties": {
            "type": {
              "const": "string"
            }
          },
          "required": [
            "type"
          ]
        },
        "then": {
          "properties": {
            "value": {
              "type": "string"
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "number"
            }
          },
          "required": [
            "type"
          ]
        },
        "then": {
          "properties": {
            "value": {
              "type": "number"
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "boolean"
            }
          },
          "required": [
            "type"
          ]
        },
        "then": {
          "properties": {
            "value": {
              "type": "boolean"
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "json"
            }
          },
          "required": [
            "type"
          ]
        },
        "then": {
          "properties": {
            "value": {
              "oneOf": [
                {
                  "type": "object"
                },
                {
                  "type": "array"
                },
                {
                  "type": "string"
                }
              ]
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "file"
            }
          },
          "required": [
            "type"
          ]
        },
        "then": {
          "properties": {
            "value": {
              "type": "string"
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "blob"
            }
          },
          "required": [
            "type"
          ]
        },
        "then": {
          "properties": {
            "value": {
              "type": "string"
            }
          }
        }
      }
    ]
  }
}